<% 
vols = []
idx = 0
@servers.each do |ip| 
	vol_name = "remote#{idx}"
	vols << vol_name
	idx += 1
%>
volume <%= vol_name %>
  type protocol/client
  option transport-type tcp
  option remote-host <%= ip %>
  option remote-subvolume <%= @device %>
end-volume

<% end %>

volume replicate
	type cluster/replicate
	subvolumes <%= vols.join(" ") %>
end-volume
